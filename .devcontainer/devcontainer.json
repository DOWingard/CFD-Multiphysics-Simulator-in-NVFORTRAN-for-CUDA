{
    "name": "CUDA Development with HPC SDK",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "--privileged"
    ],
    "containerEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility,display"
    },
    "mounts": [
        "source=${localEnv:HOME}/nvhpc_2025_257_Linux_x86_64_cuda_12.9,target=/opt/nvidia/hpc_sdk,type=bind,readonly"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-vscode.hexeditor"
            ],
            "settings": {
                "C_Cpp.default.includePath": [
                    "${workspaceFolder}/**",
                    "/opt/nvidia/hpc_sdk/Linux_x86_64/25.7/cuda/include",
                    "/opt/nvidia/hpc_sdk/Linux_x86_64/25.7/compilers/include"
                ],
                "C_Cpp.default.compilerPath": "/usr/bin/gcc",
                "C_Cpp.default.cStandard": "c17",
                "C_Cpp.default.cppStandard": "c++17",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
                "cmake.configureArgs": [
                    "-DCMAKE_CUDA_COMPILER=/opt/nvidia/hpc_sdk/Linux_x86_64/25.7/cuda/bin/nvcc"
                ]
            }
        }
    },
    "postCreateCommand": "bash ./.devcontainer/setup.sh",
    "remoteUser": "vscode"
}